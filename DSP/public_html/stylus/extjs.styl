.gk-column-icon
    font-size 0
    margin 0
    padding 0
    position relative
    vertical-align middle
    img
        &.link
            cursor pointer
            display inline-block
            margin 2px 1px
            vertical-align middle
        &.disable_link
            cursor default
            -moz-filter grayscale(100%)
            -ms-filter grayscale(100%)
            -o-filter grayscale(100%)
            -webkit-filter grayscale(100%)
            filter gray
            filter grayscale(100%)
            filter url('/images/icon/svg/grayscale.svg#greyscale')
            opacity: 0.5

    a
        &.link
            display block
            font-size 12px
            vertical-align middle
            padding 3px 6px 4px 6px
        &.disable_link
            color black
            cursor default
            text-decoration none

.lr-div-table
    background-color #D1D1D1
    .lr-table
        border-spacing 1px
        border-collapse separate
        width 100%
    .lr-table-head
        background-image linear-gradient(to bottom, #121112 0%, #1C1C1C 100%) !important
    .lr-table-tr
        &:nth-child(even)
            background-color #EDEDED
        &:nth-child(odd)
            background-color white
        &:hover
            background-color #D9D9D9
    .lr-table-td
        height 16px
        margin 0
        normal 11px/13px tahoma,arial,verdana,sans-serif
        padding 3px 6px 3px 6px
        position relative
    .lr-table-td-head
        color white

.gk-window
    outline none
    overflow hidden

    &-default
        background-color #e8e8e8
        border-color #a9a9a9
        border-radius 5px 5px 0 0
        border-style solid
        border-width 0px
        box-shadow 7px 7px 4px #888888
        padding 0

        &-mc
            background-color #e8e8e8

        &:before
            display none
            content "x-slicer:frame:5px 5px 5px 5px, corners:url(/images/extjs/window/window-default-corners.gif), sides:url(/images/extjs/window/window-default-sides.gif)" !important

    &-header
        
        > div
            > div
              > div.x-tool

                    > img.x-tool-img
                        background-image none

                        &:before
                            color white
                            content "\e604"
                            font-family 'weburbano'
                            font-size 22px

        &-default
            background-color #991919
            border-color #a9a9a9
            font-size 11px

            &-top
                background-color #991919
                border-bottom-left-radius 0
                border-bottom-right-radius 0
                border-style solid
                border-top-left-radius 5px
                border-top-right-radius 5px
                border-width 1px 1px 0 1px
                padding 5px 5px 1px 5px

        &-title
            &-default
                color white
                font-family tahoma, arial, verdana, sans-serif
                font-size 11px
                font-weight bold
                line-height 15px

                & > .x-title-text-default
                    padding 0 2px 1px
                    text-transform none

                    &:after
                        color white
                        content "\e604"
                        font-family 'weburbano'
                        font-size 22px
                        position absolute
                        right -18px
                        top 0

    &-body
        position relative
        overflow hidden

        &-default
            background #e0e0e0
            border-color #bcb1b0
            border-style solid
            border-width 1px
            color black
            font-family tahoma, arial, verdana, sans-serif
            font-size 12px
            font-weight normal

        &-plain
            background-color transparent

.gk-toolbar
