@import 'nib'

gris_claro = #818181
gris_fondo = #1C1C1C
gris_oscuro = #333333

input[type="password"],
input[type="text"]
    border 1px solid #ccc
    border-radius 2px
    box-shadow inset 0 1px 3px #ddd
    box-sizing border-box
    padding 0.2em 0.3em

input[type="password"]:focus,
input[type="text"]:focus
    border-color #129FEA
    outline 0
    outline thin dotted \9

body
    background-color gris_fondo
    font-family 'Varela Round', sans-serif
    font-size 16px

.contenedor_login
    background-color rgba(#333333, .01)
    border 12px solid rgba(#333333, .2)
    border-radius 10px
    height 300px
    left 50%
    margin-left -(504/2)px
    margin-top -(324/2)px
    position absolute
    top 50%
    width 480px

.contenedor_login_in
    background-color white
    border-radius 5px
    height 100%

    header
        background-color #151515
        border 1px solid #d8d8d8
        border-radius 5px 5px 0 0
        box-shadow 0 0 5px 0 gray
        font-size 0
        height 60px
        position relative
        .logo
            background url('/images/front/logo_madison.png') no-repeat
            display inline-block
            font-size 0
            height 45px
            margin .5rem
            vertical-align middle
            width 145px

        .welcome
            border-left .12em solid gray
            color gray
            display inline-block
            font-size 0
            font-size 1.1rem
            line-height 1em
            margin-left 11em
            padding 0 0 0 .4em
            vertical-align middle

    section
        height 170px
        padding 1em

        p
            margin-top 2px

        .cambiar_password
            display inline-block
            font-size .8em
            text-decoration none

            &:hover
                text-decoration underline

        .ingrese
            color gris_claro
            font-size .9em

        .label
            color gris_oscuro
            display inline-block
            font-size 1em
            width 150px

        .input
            display inline-block
            font-size 1em
            width 55%

        .button
            background-color gris_oscuro
            border none
            border-radius 2px
            color white
            display block
            margin 0 auto
            padding .3em
            text-align center

            &:hover
                background-color gris_claro

    footer
        margin 0
        padding 0
        p
            margin 0
            text-align center
            span
                color gris_claro
                display block
                font-size .6em

.error-msg
    background-image linear-gradient(to bottom, #F50A0A 0%, #FF573D 50%)
    cursor pointer
    height 30px
    text-align left
    .texto-error
        color white
        display inline-block
        font-size 1em
        margin 4px 10px
        vertical-align top
    .info-icon
        color white
        display inline-block
        font-size 1.2em
        margin-left 8px
        margin-top 4px
        vertical-align top

.hide
    display none

@media only screen and (max-width:504px)
    
    .contenedor_login
        border 0
        border-radius 0
        left 0
        margin 0
        margin-top -34%
        top 50%
        width 100%

    .contenedor_login_in
        border-radius 0

        header
            .logo
                margin 0
                vertical-align bottom
            .welcome
                margin-left 0
                vertical-align bottom

.centrar
    text-align center
